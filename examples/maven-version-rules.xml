<ruleset comparisonMethod="maven"
         xmlns="https://www.mojohaus.org/VERSIONS/RULE/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://www.mojohaus.org/VERSIONS/RULE/2.1.0 https://www.mojohaus.org/versions/versions-model/xsd/rule-2.1.0.xsd">
    <ignoreVersions>
        <ignoreVersion type="regex">.*[\.-](?i)([M|alpha|beta|rc]).*</ignoreVersion>
    </ignoreVersions>
    <rules>
        <!-- Pin kotlin to pre-V2 -->
        <rule groupId="org.jetbrains.kotlin" artifactId="kotlin-maven-plugin" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">^(?:[2-9]|[1-9]\d+)\..*$</ignoreVersion> <!-- Ignore v2.x.x + -->
            </ignoreVersions>
        </rule>
        <rule groupId="org.jetbrains.kotlin" artifactId="kotlin-reflect" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">^(?:[2-9]|[1-9]\d+)\..*$</ignoreVersion> <!-- Ignore v2.x.x + -->
            </ignoreVersions>
        </rule>
        <rule groupId="org.jetbrains.kotlin" artifactId="kotlin-stdlib" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">^(?:[2-9]|[1-9]\d+)\..*$</ignoreVersion> <!-- Ignore v2.x.x + -->
            </ignoreVersions>
        </rule>
        <rule groupId="org.jetbrains.kotlin" artifactId="kotlin-test-testng" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">^(?:[2-9]|[1-9]\d+)\..*$</ignoreVersion> <!-- Ignore v2.x.x + -->
            </ignoreVersions>
        </rule>

        <!-- Pin kotlinx-coroutines to 1.9.x (1.10.x requires kotlin 2.x) -->
        <rule groupId="org.jetbrains.kotlinx" artifactId="kotlinx-coroutines-core" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">^1\.[1-9]\d+\..*</ignoreVersion> <!-- Ignore v1.10.x + -->
                <ignoreVersion type="regex">^(?:[2-9]|[1-9]\d+)\..*$</ignoreVersion> <!-- Ignore v2.x.x + -->
            </ignoreVersions>
        </rule>

        <!-- Pin http4k version to pre-V6.3 (v6.3+ requires kotlin 2.x) -->
        <rule groupId="org.http4k" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">^6\.(?:[3-9]|[1-9]\d+)\..*$</ignoreVersion> <!-- Ignore v6.3.x + -->
                <ignoreVersion type="regex">^(?:[7-9]|[1-9]\d+)$</ignoreVersion> <!-- Ignore v7.x.x + -->
            </ignoreVersions>
        </rule>
    </rules>
</ruleset>
